<!doctype html>
<html lang="en">
{{> head}}
<body>
  <header class="banner banner__post banner__cover">
    <div class="background" style="background-image: url(/images/posts/{{banner_image}})"></div>
    <h1>{{title}}</h1>
    <div class="meta">
      <span>By <span class="author">{{name}}</span></span>
      <span>on</span>
      <time class="publish-date" datetime="{{isoDate date}}">{{postDate date}}</time>
    </div>
    <p class="intro row">{{intro}}</p>
    <a class="button button__on-dark continue-reading" href="#content">Continue Reading</a>
  </header>
  <a id="content"></a>
  <main role="main" class="content row">
    <article>
      {{{contents}}}
    </article>
    <div id="disqus_thread" class="comments"></div>
  </main>
  <script type="text/javascript" src="/js/highlight.pack.js"></script>
  <script>hljs.initHighlightingOnLoad();</script>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES * * */
      var title = "{{title}}";
      var disqus_shortname = 'danschultz';
      var disqus_identifier = title.toLowerCase().replace(" ", "-");
      
      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
</body>
</html>